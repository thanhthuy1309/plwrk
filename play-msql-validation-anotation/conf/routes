# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         jp.gmo.net.controllers.UserController.index()
GET     /login                      jp.gmo.net.controllers.UserController.login()
POST    /login                      jp.gmo.net.controllers.UserController.postLogin()
GET     /profile                    jp.gmo.net.controllers.UserController.profile()
GET     /detail                    jp.gmo.net.controllers.UserController.detail()
GET     /logout                      jp.gmo.net.controllers.UserController.logout()

GET     /register                      jp.gmo.net.controllers.UserController.register()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             controllers.Assets.at(path="/public", file)
GET     /login                    jp.gmo.net.controllers.UserController.login()
