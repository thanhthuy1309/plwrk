# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /person                     controllers.Application.addPerson
GET     /add                    	controllers.Application.add
GET     /loginGoogle                controllers.Application.loginGoogle
GET     /login      				controllers.Application.login(state: String, code: String)
GET		/loginForm					controllers.Application.loginForm()
GET     /send						controllers.ApplicationScala.send()
GET		/admin/list					controllers.AdminController.listUser()
GET		/admin/update/:email		controllers.AdminController.updateUser(email: String)
POST	/admin/update/:email		controllers.AdminController.adminUpdateUserPost(email: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             	controllers.Assets.at(path="/public", file)